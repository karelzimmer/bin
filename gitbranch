#!/usr/bin/bash

# gitbranch: show all local git branches

bold='\e[1m'
normal='\e[0m'
newline=''
repo_list=$(
    find    "$HOME"         \
		   	-maxdepth 2     \
            -name .git      \
            -type d         \
            -print          |
    cut     --delimiter='/' \
            --fields=4      |
    sort
    )
newline=''
for repo in $repo_list; do
    printf "${newline}${bold}Branch %s${normal}\n" "$repo"
    newline='\n'
    cd "$HOME/$repo" || exit 1
    git branch
done
