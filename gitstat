#!/bin/bash
set -eu

# Git status van alle repo's.

readonly -a REPO=(
    "$HOME/ansible"
    "$HOME/bin"
    "$HOME/c"
    "$HOME/java"
    "$HOME/kz-deb"
    "$HOME/kz-docs"
    "$HOME/kz-scripts"
    "$HOME/kz-uploads"
    "$HOME/python"
    "$HOME/scripts"
    )

for repo in "${REPO[@]}"; do
    base=$(basename "$repo")
    printf "$(tput bold)%s$(tput sgr0)\n" "$base"
    cd "$repo" || exit 1
    git status
done
