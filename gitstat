#!/usr/bin/bash

# gitstat: git status of all local branches

bold='\e[1m'
normal='\e[0m'
newline=''
repo_list=$(
    find    "$HOME"         \
            -maxdepth 2     \
            -name .git      \
            -type d         \
            -print          |
    cut     --delimiter='/' \
            --fields=4      |
    sort
    )

for repo in $repo_list; do
    printf "${newline}${bold}Status %s${normal}\n" "$repo"
    newline='\n'
    cd "$HOME/$repo" || exit 1
    git status
done
