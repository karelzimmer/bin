#!/bin/bash
set -o errexit
set -o nounset

# Git status van alle repo's in repo.list.

while read -r repo; do
    printf "$(tput bold)%s$(tput sgr0)\n" "$repo"
    cd "$HOME/$repo" || exit 1
    git status | sed '/^$/d' | sed '/On branch main/d' |
    sed "/Your branch is up to date with 'origin\/main'./d"
done < "$HOME"/bin/repo.list
