#!/bin/bash

# gitstat: git status of all local branches

repo_list=$(
    find    "$HOME"         \
		   	-maxdepth 2     \
            -name .git      \
            -type d         \
            -print          |
    cut     --delimiter='/' \
            --fields=4      |
    sort
    )
newline=''
for repo in $repo_list; do
    printf "${newline}$(tput bold)%s$(tput sgr0)\n" "$repo"
    newline='\n'
    cd "$HOME/$repo" || exit 1
    # Remove empty and known lines from output.
    git status                      |
        sed '/On branch/d'          |
        sed "/Your branch is up/d"  |
        sed '/^$/d'                 |
        sed '/nothing to commit, working/d'
done
