#!/usr/bin/bash

# gitstat: git status of all local branches

repo_list=$(
    find    "$HOME"         \
            -maxdepth 2     \
            -name .git      \
            -type d         \
            -print          |
    cut     --delimiter='/' \
            --fields=4      |
    sort
    )

for repo in $repo_list; do
    printf "${newline}Status %s...\n" "$repo"
    newline='\n'
    cd "$HOME/$repo" || exit 1
    git status
done
