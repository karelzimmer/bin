#!/usr/bin/env bash
# shellcheck source=common.sh
###############################################################################
# SPDX-FileComment: Git pull of all local branches in the home directory
#
# SPDX-FileCopyrightText: Karel Zimmer <info@karelzimmer.nl>
# SPDX-License-Identifier: CC0-1.0
###############################################################################

###############################################################################
# Imports
###############################################################################
source common.sh


###############################################################################
# Constants
###############################################################################

readonly BOLD='\033[1m'
readonly NORMAL='\033[0m'


###############################################################################
# Globals
###############################################################################

declare repo=''
declare repos=''


###############################################################################
# Main
###############################################################################

init_script

repos=$(
    find    "$HOME"     \
            -maxdepth 2 \
            -name .git  \
            -type d     \
            -print      |
    sort                |
    sed     --expression='s|/.git||'
    )

for repo in $repos; do
    printf "\n${BOLD}Pull %s...$NORMAL\n" "$repo"
    cd "$repo" || exit 1
    git pull --all --verbose
done

printf '%s\n' "$(gettext 'Complete!')"
exit 0
