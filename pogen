#!/bin/bash
set -o errexit
set -o nounset

# pogensh: update .pot and merge with existing .po for Shell and Python scripts

language='Pipo'
proj_dir='/home/karel/kz-scripts'

cd "proj_dir"

if [[ -z "$*" ]]; then
    echo 'Gebruik: pogen SCRIPT'
    exit 1
elif grep --quiet '^# shellcheck ' "$1"; then
    language='Shell'
elif grep --quiet '^import ' "$1"; then
    language='Python'
else
    echo 'Kan de taal (Shell of Python) niet bepalen.'
    exit 1
fi

xgettext    --language=$language    \
            --join-existing         \
            --no-location           \
            --output=$proj_dir/usr/bin/kz.pot "$1"
msgmerge    --update                                        \
            --backup=none                                   \
            --previous                                      \
            --no-location                                   \
            $proj_dir/usr/share/locale/nl/LC_MESSAGES/kz.po \
            $proj_dir/usr/bin/kz.pot
