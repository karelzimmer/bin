#!/usr/bin/bash
set -o errexit
set -o nounset

# gitfetch: git fetch of all local branches

bold='\e[1m'
normal='\e[0m'
newline=''
repo_list=$(
    find    "$HOME"         \
            -maxdepth 2     \
            -name .git      \
            -type d         \
            -print          |
    cut     --delimiter='/' \
            --fields=4      |
    sort
    )
newline=''
for repo in $repo_list; do
    printf "${newline}${bold}Fetch %s${normal}\n" "$repo"
    newline='\n'
    cd "$HOME/$repo"
    git fetch
done
