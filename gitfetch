#!/bin/bash
set -o errexit
set -o nounset

# gitfetch: git fetch of all local branches

repo_list=$(
    find    "$HOME"         \
            -maxdepth 2     \
            -name .git      \
            -type d         \
            -print          |
    cut     --delimiter='/' \
            --fields=4      |
    sort
    )
newline=''
for repo in $repo_list; do
    # Skip special repository.
    printf "${newline}$(tput bold)%s$(tput sgr0)\n" "$repo"
    newline='\n'
    cd "$HOME/$repo"
    git fetch
done
