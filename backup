#!/bin/bash
source=$HOME
target=$(ls --directory /media/"$USER"/*)
exclude=$(mktemp -t 'backup-XXXXXXXXXX')
distro=$(lsb_release --id --short | tr '[:upper:]' '[:lower:]')

cat << EOF > "$exclude"
.adobe/Flash_Player/AssetCache
.cache
.ccache
.git
.gvfs
.Private
__pycache__
.recent-applications.xbel
.recently-used.xbel
snap/*/*/.cache
.steam/root
.thumbnails
.var/app/*/cache
.xsession-errors
EOF

rsync   --archive                   \
        --verbose                   \
        --human-readable            \
        --delete                    \
        --exclude-from="$exclude"   \
        --delete-excluded           \
        --ignore-errors             \
        "$source"/                  \
        "$target/backup-$HOSTNAME-$distro-$USER"
